<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Lesson6Activity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/image"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/transactionx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="x轴平移"
        android:onClick="onClickTransactionX"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="缩放"
        android:onClick="onClickScale"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="旋转"
        android:onClick="onClickRotate"
        android:layout_margin="1dp"/>

    <com.example.leidong.myview.views.lesson6Views.Score
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:onClick="onClickScore"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>